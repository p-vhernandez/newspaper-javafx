<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.web.WebView?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="NewsReaderController">
   <children>

      <HBox layoutX="300.0" layoutY="250.0" prefHeight="100.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         
         <children>
            <VBox prefHeight="600.0" prefWidth="300.0">
               
                     <children>
                  <Label fx:id="lblUser" prefWidth="290.0" text="Welcome back, DEV_TEAM_3!">
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                     <VBox.margin>
                        <Insets left="10.0" right="10.0" top="20.0" />
                     </VBox.margin>
                  </Label>
                  <ComboBox fx:id="selectorCategory" prefWidth="290.0" promptText="Select category..." style="-fx-background-color: #ffffff; -fx-border-color: black; -fx-border-radius: 50%; -fx-background-radius: 4%;" styleClass="category-selector">
                     <VBox.margin>
                        <Insets bottom="20.0" left="10.0" right="10.0" top="20.0" />
                     </VBox.margin>
                  </ComboBox>
                  <ListView fx:id="listArticles" prefHeight="511.0" prefWidth="293.0" style="-fx-background-color: white;">
                     <VBox.margin>
                        <Insets bottom="20.0" left="10.0" right="10.0" />
                     </VBox.margin>
                  </ListView>

                     </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>

                  </VBox>
            <VBox prefHeight="600.0" prefWidth="500.0">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
               <children>
                  <HBox alignment="CENTER_RIGHT" prefHeight="50.0" prefWidth="200.0">
                     <children>
                        <Button fx:id="btnLogin" mnemonicParsing="false" onAction="#btnLoginClicked" style="-fx-background-color: black; -fx-min-width: 120px; -fx-font-weight: bold; -fx-text-fill: white;" text="Login" />
                        <MenuButton fx:id="btnMenu" alignment="CENTER" mnemonicParsing="false" style="-fx-background-color: #ffffff; -fx-border-color: black; -fx-border-radius: 50%; -fx-background-radius: 4%; -fx-min-width: 120px;" text="Options">
                           <items>
                              <MenuItem fx:id="btnLoadArticle" mnemonicParsing="false" onAction="#btnLoadArticleClicked" text="Load article from file" />
                              <MenuItem fx:id="btnNewArticle" mnemonicParsing="false" onAction="#btnNewArticleClicked" text="New Article" />
                              <MenuItem fx:id="btnEditArticle" mnemonicParsing="false" onAction="#btnEditArticleClicked" text="EditArticle" />
                              <MenuItem fx:id="btnDeleteArticle" mnemonicParsing="false" onAction="#btnDeleteArticleClicked" text="Delete article" />
                              <MenuItem fx:id="btnLogout" mnemonicParsing="false" onAction="#btnLogoutClicked" text="Logout" />
                              <MenuItem fx:id="btnExit" mnemonicParsing="false" onAction="#btnExitClicked" text="Exit" />
                           </items>
                           <HBox.margin>
                              <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                           </HBox.margin>
                        </MenuButton>
                     </children>
                     <VBox.margin>
                        <Insets bottom="10.0" left="20.0" right="20.0" />
                     </VBox.margin>
                  </HBox>
                  <ImageView fx:id="articleImage" fitHeight="200.0" fitWidth="400.0" nodeOrientation="INHERIT" pickOnBounds="true" preserveRatio="true">
                     <VBox.margin>
                        <Insets left="30.0" right="30.0" />
                     </VBox.margin>
                  </ImageView>
                  <WebView fx:id="articleAbstract" prefHeight="200.0" prefWidth="200.0">
                     <VBox.margin>
                        <Insets left="30.0" right="30.0" top="10.0" />
                     </VBox.margin>
                  </WebView>
                  <Button fx:id="btnReadMore" alignment="CENTER" contentDisplay="CENTER" disable="true" mnemonicParsing="false" onAction="#readMore" style="-fx-background-color: black; -fx-text-fill: white; -fx-min-width: 120px; -fx-font-weight: bold;" text="Read more" VBox.vgrow="ALWAYS">
                     <VBox.margin>
                        <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
                     </VBox.margin>
                  </Button>
               </children>
            </VBox>
         </children>

      </HBox>

   </children>
</AnchorPane>
